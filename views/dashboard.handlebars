<div id="ballDontLie" class="text-center m-5 p-5 card">
  <h1>Hello, {{userPlayers.username}}!</h1>
</div>

<div class="m-5" id="userPlayerContainer">
  <div class="card">
    <div class="card-header fs-2">
      Saved Players: 
    </div>
    <div class="card-body m-3">
      {{#each userPlayers.players as |player|}}
      {{!-- <a class="card-text fs-4 text-decoration-none text-light" href="/player/{{player.player_id}}" data-id="{{player.player_id}}">{{player.first_name}}
      {{player.last_name}}</a> --}}
      <a class="icon-link icon-link-hover card-text fs-4 text-decoration-none text-light"  href="/player/{{player.player_id}}" data-id="{{player.player_id}}">
      {{player.first_name}}
      {{player.last_name}}
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right"
          viewBox="0 0 16 16">
          <path fill-rule="evenodd"
            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
        </svg>
      </a>
      <hr>
      {{/each}}
    </div>
  </div>
</div>